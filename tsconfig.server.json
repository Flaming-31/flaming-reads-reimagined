// tsconfig.server.json

{
  // Inherit all base settings from your main config
  "extends": "./tsconfig.app.json", 
  "compilerOptions": {
    // Crucial change: tells the compiler to use Node's modern module resolution
    "moduleResolution": "NodeNext", 
    
    // Also change the module target for Node
    "module": "NodeNext",
    
    // Keep this true for compatibility between CJS dependencies and ESM
    "esModuleInterop": true 
  },
  // Only include the API files in this configuration
  "include": ["src/pages/api/**/*.ts", "src/pages/api/**/*.tsx"] 
}
